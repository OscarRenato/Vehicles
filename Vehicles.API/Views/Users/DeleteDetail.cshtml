@model Vehicles.API.Data.Entities.Detail

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Quieres eliminar este registro?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaborPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LaborPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
